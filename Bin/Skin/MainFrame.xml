						<Option float="true" pos="0,0,520,140" name="opt_home" focusbordercolor="#FF2D97DE" bordersize="1" />
					</VerticalLayout>
					<VerticalLayout float="true" pos="20,220,550,360" bkcolor="#F7F8F8FF">
